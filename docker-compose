
services:
  # MariaDB Database
  db:
    image: mariadb:11.3
    container_name: peerconnect-db
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: rootpass
      MYSQL_DATABASE: peerconnect_db
      MYSQL_USER: peeruser
      MYSQL_PASSWORD: mypassword
    ports:
      - "8000:8000"
    volumes:
      - db_data:/var/lib/mysql

  # PHP Backend (API)
  backend:
    build: ./backend
    container_name: peerconnect-backend
    restart: always
    depends_on:
      - db
    environment:
      DB_HOST: db
      DB_NAME: peerconnect_db
      DB_USER: peeruser
      DB_PASS: mypassword
    ports:
      - "8000:80"
    volumes:
      - ./backend:/var/www/html



  # React Frontend
  frontend:
    build: ./frontend
    container_name: peerconnect-frontend
    restart: always
    ports:
      - "5173:5173"
    stdin_open: true
    tty: true
    volumes:
      - ./frontend:/usr/src/app
    depends_on:
      - backend

volumes:
  db_data: